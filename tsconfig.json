{
  "compilerOptions": {
    "target": "ES2022",
    "module": "CommonJS",
    "outDir": "./lib",
    "rootDir": "./src",
    "removeComments": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,       
    "moduleResolution": "node",       
    "allowSyntheticDefaultImports": true 
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}